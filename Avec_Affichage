#include <stdio.h>
#include <stdlib.h>

int main (int argc, char *argv[]) 
{
	int nbr=atoi(argv[1]) ;
	int parfait=0 ;
	for(int i = 1 ; i<nbr ; i++)
	{
		if(nbr%i==0)
		{
			parfait+=i ;
		}
		else
		{
		}
	}
	if(parfait==nbr)
	{
		printf("Le nombre %d est parfait \n", nbr) ;
	}
	else
	{
		printf("Le nombre %d n'est pas parfait \n", nbr) ;	
    }
	return 0 ;
}
